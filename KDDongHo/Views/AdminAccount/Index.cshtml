@model IEnumerable<KDDongHo.Models.NGUOI_DUNG>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Admin_Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/Static/Admin/assets/vendors/custom/datatables/datatables.bundle.css")
}

@section subheader{
    <div class="m-subheader d-flex">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator ">Danh sách tài khoản</h3>
            </div>
        </div>
        <div class="m-portlet__nav-item ml-auto">
            <a href="@Url.Action("Create", "AdminAccount")" class="btn btn-accent m-btn m-btn--custom m-btn--pill m-btn--icon m-btn--air">
                <span>
                    <i class="la la-plus"></i>
                    <span>Thên mới</span>
                </span>
            </a>
        </div>
    </div>
}
<div class="m-portlet m-portlet--mobile">
    <div class="m-portlet__body">
        <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên tài khoản</th>
                    <th>Họ tên</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Trạng thái</th>
                    <th>Loại tài khoản</th>
                    <th width="120">Điều chỉnh</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.NAME
                    </td>


                    <td>
                        @item.HOTEN
                    </td>
                    <td>
                        @item.SDT
                    </td>
                    <td>
                        @item.DIACHI
                    </td>

                    <td>
                        @if (item.TRANGTHAI == true)
                        {
                            <a href="#" class="acc_status_confirm" data-toggle="modal" data-target="#acc_status_confirm" data-url="@Url.Action("UpdateStatus", "AdminAccount", new { id=item.ID, status=false })">Hủy tài khoản</a>
                        }
                        else
                        {
                            <a href="#" class="acc_status_confirm" data-toggle="modal" data-target="#acc_status_confirm" data-url="@Url.Action("UpdateStatus", "AdminAccount", new { id=item.ID, status=true })">Kích hoạt tài khoản</a>
                        }
                    </td>
                    <td>
                        @if (item.IS_SUPER_USER == true)
                        {
                            <p>Quản trị</p>
                        }
                        else
                        {
                            <p>Nhân viên</p>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "AdminAccount", new { id = item.ID })" class="btn m-btn btn-sm btn-primary m-btn--icon m-btn--icon-only m-btn--custom m-btn--pill">
                            <i class="la la-edit"></i>
                        </a>
                        <a href="#" data-url="@Url.Action("Delete", "AdminAccount", new { id = item.ID })" data-toggle="modal" data-target="#delete_confirm"
                           class="delete_confirm btn m-btn btn-sm m-btn--icon m-btn--icon-only m-btn--custom m-btn--pill btn-danger">
                            <i class="la la-trash"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@RenderPage("~/Views/Admin_Shared/Partials/_modal.cshtml")

@section scripts{
    @Scripts.Render("~/Static/Admin/assets/vendors/custom/datatables/datatables.bundle.js")
    @Scripts.Render("~/Static/Admin/assets/app/js/my-script.js")
    <script>
        $('#m_table_1').DataTable();
    </script>
}


