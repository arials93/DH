@model IEnumerable<KDDongHo.Models.DONG_HO>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Admin_Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/Static/Admin/assets/vendors/custom/datatables/datatables.bundle.css")
}

@section subheader{
    <div class="m-subheader d-flex">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator ">Danh sách sản phẩm</h3>
            </div>
        </div>
        <div class="m-portlet__nav-item ml-auto">
            <a href="@Url.Action("Create", "AdminProduct")" class="btn btn-accent m-btn m-btn--custom m-btn--pill m-btn--icon m-btn--air">
                <span>
                    <i class="la la-plus"></i>
                    <span>Thên mới</span>
                </span>
            </a>
        </div>
    </div>
}

<div class="m-portlet m-portlet--mobile">
    <div class="m-portlet__body">
        <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Hình</th>
                    <th>Mẫu mã</th>
                    <th>Kích cỡ</th>
                    <th>Độ dày</th>
                    <th>Vỏ</th>
                    <th>Dây</th>
                    <th>Kính</th>
                    <th>ATM</th>
                    <th>Bảo hành</th>
                    <th>Giá</th>
                    <th>Giảm</th>
                    <th width="120">Điều chỉnh</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            <img src="@item.HINH_ANH.First().URL" width="120" />
                        </td>
                        <td>
                            @item.MAUMA
                        </td>
                        <td>
                            @item.KICHCO
                        </td>
                        <td>
                            @item.DODAY
                        </td>
                        <td>
                            @item.CHATLIEU_VO
                        </td>
                        <td>
                            @item.CHATLIEU_DAY
                        </td>
                        <td>
                            @item.CHATLIEU_KINH
                        </td>
                        <td>
                            @item.DOCHIEUNUOC
                        </td>
                        <td>
                            @item.BAOHANH
                        </td>
                        <td>
                            @item.DONGIA
                        </td>
                        <td>
                            @item.GIAMGIA%
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "AdminBrand", new { id = item.ID })" class="btn m-btn btn-sm btn-primary m-btn--icon m-btn--icon-only m-btn--custom m-btn--pill">
                                <i class="la la-edit"></i>
                            </a>
                            <a href="#" data-url="@Url.Action("Delete", "AdminBrand", new { id = item.ID })" data-toggle="modal" data-target="#delete_confirm"
                               class="delete_confirm btn m-btn btn-sm m-btn--icon m-btn--icon-only m-btn--custom m-btn--pill btn-danger">
                                <i class="la la-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@RenderPage("~/Views/Admin_Shared/Partials/_modal.cshtml")

@section scripts{
    @Scripts.Render("~/Static/Admin/assets/vendors/custom/datatables/datatables.bundle.js")
    @Scripts.Render("~/Static/Admin/assets/app/js/my-script.js")
    <script>
        $('#m_table_1').DataTable();
    </script>
}

