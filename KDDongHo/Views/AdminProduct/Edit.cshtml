<div id="null_preview" hidden>
    <label class="container-fluid">
        <p class="d-flex align-items-center justify-content-center preview_image" style="border: 4px solid #efefef; min-height: 80px; width: 100%">
            Chọn hình
        </p>
        <input class=" d-none" name="Images" type="file">
    </label>
</div>

@RenderPage("~/Views/Admin_Shared/Partials/_modal.cshtml")

@section scripts {
    @Scripts.Render("~/Static/Admin/assets/app/js/my-script.js")
    <script>

        $(document).ready(function () {
            load_preview();
            load_widget();
            $(document).delegate('[name="Images"]', 'change', function () {
                readURL(this);
            });

            $('#add-img').click(function () { load_preview(); });
        });



        function readURL(input) {

            var parent = $(input).parents('label');
            if (input.files && input.files[0]) {

                var reader = new FileReader();



                reader.onload = function (e) {

                    parent.find('.preview_image').html(`<img src="${e.target.result}" class="img-fluid"/>`);

                }



                reader.readAsDataURL(input.files[0]);

            }

        }

        function load_widget() {
            $("#ID_HANGSX").select2({ placeholder: "Chọn nhãn hiệu" });
            $("#ID_KIEUMAY").select2({ placeholder: "Chọn kiểu máy" });
        }

        function load_preview() {
            var element = $('#null_preview').html();
            $('#preview_img').append(element);
        }

    </script>
}
