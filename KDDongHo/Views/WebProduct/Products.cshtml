@foreach (var item in Model)
{
    
    var block_tag = string.Empty;
    if (item.GIAMGIA > 0)
    {
        block_tag = "block2-labelsale";
        
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
        <!-- Block2 -->
        <div class="block2">
            <div class="block2-img wrap-pic-w of-hidden pos-relative @block_tag">
                <img src="@item.HINH_ANH.First().URL" alt="IMG-PRODUCT">

                <div class="block2-overlay trans-0-4">
                    <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                        <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                        <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                    </a>

                    <div class="block2-btn-addcart w-size1 trans-0-4">
                        <!-- Button -->
                        <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                            Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>

            <div class="block2-txt p-t-20">
                <a href="@Url.Action("Product_Detail", "WebProduct", new { id = item.ID})" class="block2-name dis-block s-text3 p-b-5">
                    @item.HANG_SX.TEN @item.MAUMA @item.KIEU_MAY.TEN
                </a>

                <span class="block2-oldprice m-text7 p-r-5">
                    @string.Format("{0:0,0}", @item.DONGIA)
                </span>

                <span class="block2-newprice m-text8 p-r-5">
                    @string.Format("{0:0,0 VND}", @item.DONGIA - (@item.DONGIA * @item.GIAMGIA / 100))
                </span>
            </div>

        </div>
    </div>
    }
    else if (item.MOI == true)
    {
        block_tag = "block2-labelnew";
        
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
